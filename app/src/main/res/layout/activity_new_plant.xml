<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.hydrotech.bagassaputro.hidroponikapps.NewPlantActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp">

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:text="Jenis Plant"
                    android:textColor="@color/hitam"
                    android:textSize="12sp" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:visibility="visible" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:text="Tandon Plant"
                    android:textColor="@color/hitam"
                    android:textSize="12sp" />

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:visibility="visible" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:text="Date of Plant"
                    android:textColor="@color/hitam"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/edit_tanggal"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:inputType="date" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:text="Harvest Plant"
                    android:textColor="@color/hitam"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/edit_waktu"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:inputType="date" />
            </TableRow>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/tv_pH1"
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="pH"
                    android:textColor="@color/hitam" />

                <EditText
                    android:id="@+id/edit_pH2"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_pH1"
                    android:layout_alignBottom="@+id/tv_pH1"
                    android:layout_toEndOf="@+id/tv_pH1"
                    android:layout_toRightOf="@+id/tv_pH1"
                    android:inputType="number" />

                <EditText
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/edit_pH2"
                    android:layout_alignBottom="@+id/edit_pH2"
                    android:layout_marginBottom="16dp"
                    android:layout_toEndOf="@+id/edit_pH2"
                    android:layout_toRightOf="@+id/edit_pH2"
                    android:inputType="number" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_TDS1"
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:text="TDS"
                    android:textColor="@color/hitam" />

                <EditText
                    android:id="@+id/edit_TDS2"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_TDS1"
                    android:layout_alignBottom="@+id/tv_TDS1"
                    android:layout_toEndOf="@+id/tv_TDS1"
                    android:layout_toRightOf="@+id/tv_TDS1"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/edit_TDS3"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/edit_TDS2"
                    android:layout_alignBottom="@+id/edit_TDS2"
                    android:layout_toEndOf="@+id/edit_TDS2"
                    android:layout_toRightOf="@+id/edit_TDS2"
                    android:inputType="number" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/tv_wl1"
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:text="Water Level"
                    android:textColor="@color/hitam" />

                <EditText
                    android:id="@+id/edit_wl2"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_wl1"
                    android:layout_alignBottom="@+id/tv_wl1"
                    android:layout_toEndOf="@+id/tv_wl1"
                    android:layout_toRightOf="@+id/tv_wl1"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/edit_wl3"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/edit_wl2"
                    android:layout_alignBottom="@+id/edit_wl2"
                    android:layout_toEndOf="@+id/edit_wl2"
                    android:layout_toRightOf="@+id/edit_wl2"
                    android:inputType="number" />
            </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="16dp"
                android:onClick="SubmitPlant"
                android:text="Submit" />
        </TableLayout>
    </LinearLayout>
</ScrollView>